// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-logo = #555
color-nav = #000
color-default = #555
color-background = #eee
color-gray = #73827C
color-footer-background = #262a30
color-lightgray = #969696
color-black = #292929
color-blue = #050A55
color-yellow = #6C4E00
color-red = #550A00
color-green = #115500
color-white = #eee
color-hexo = #0e83cd
color-border = #ddd
color-link = #258fb8
color-sidebar-text = #777
color-widget-background = #ddd
color-widget-border = #ccc
color-mobile-nav-background = #292929
color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39


// Fonts
font-sans = -apple-system, BlinkMacSystemFont,
    "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
    "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
font-serif = Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-icon = FontAwesome
font-icon-path = "fonts/fontawesome-webfont"
font-icon-version = "4.0.3"
font-size = 14px
line-height = 2em
line-margin = 1.1em
line-height-title = 1.4em
font-size-aside = 16px

// Header
header-height = 150px
logo-img-height = 50px
banner-height = 64px
//banner-url = "images/banner.jpg"
sidebar = hexo-config("sidebar")

// Layout
block-margin = 50px
article-padding = 20px
highlight-padding = 5px
mobile-nav-width = 130px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"
mq-moblie-dw320 = "screen and (max-device-width: 320px)"
mq-moblie-dw414 = "screen and (max-device-width: 414px)"
mq-moblie-dw786 = "screen and (max-device-width: 786px)"
mq-moblie-dw1024 = "screen and (max-device-width: 1024px)"
mq-moblie-dw1377 = "screen and (max-device-width: 1377px)"
