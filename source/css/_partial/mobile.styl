@media mq-mobile
  #mobile-nav
    padding-top: 30%
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 70%
    background: color-mobile-nav-background
    border-right: 1px solid #fff

@media mq-mobile
  .mobile-nav-link
    display: block
    color: color-grey
    text-decoration: none
    padding: 15px 20px
    font-weight: bold
    &:hover
      color: #fff

@media mq-mobile
  #header-title 
    a
     word-spacing: 0
     letter-spacing: 0.1em
     font-size: 2.2em

@media mq-mobile   
   .outer 
    padding: 0 8px
   
   .article
     margin: 10px 0

    #article-nav
      margin-top: 4em

    .article-nav-link-wrap
      margin: 2em auto

   #subtitle-wrap
     margin-top: 1em

   .article-share-link
     &:before
      content: ""
